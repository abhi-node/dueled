{
  "name": "@dueled/server",
  "version": "1.0.0",
  "description": "Dueled game server",
  "main": "./dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm install && tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test:services": "NODE_ENV=test vitest src/services/*.test.ts",
    "test:coverage": "NODE_ENV=test vitest --coverage",
    "test:setup": "node src/scripts/testPlayerServices.js",
    "debug:matchmaking": "tsx src/scripts/debugMatchmaking.ts",
    "migrate": "tsx src/scripts/runMigrations.ts"
  },
  "dependencies": {
    "@dueled/shared": "1.0.0",
    "@types/cookie-parser": "^1.4.9",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-rate-limit": "^6.8.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "socket.io": "^4.7.0",
    "uuid": "^9.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.0",
    "tsx": "^3.12.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  }
}
